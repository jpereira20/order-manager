<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="order-manager-pu"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- Database Connection Data -->
		<properties>
			<!-- Driver JDBC PostgreSQL -->
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />

			<!-- PostgreSQL Connection URL -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/order_manager" />

			<!-- Database User and Password -->
			<property name="javax.persistence.jdbc.user"
				value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="jpereira" />

			<!-- PostgreSQL dialect -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />

			<!-- Bank Creation Control -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<!-- Display the SQL Queries generated by Hibernate -->
			<property name="hibernate.show_sql" value="true" />

			<!-- Format the SQL generated -->
			<property name="hibernate.format_sql" value="true" />

			<!-- Do not create a second-level cache -->
			<property name="hibernate.cache.use_second_level_cache"
				value="false" />

			<!-- PostgreSQL connection -->
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
		</properties>
	</persistence-unit>

</persistence>